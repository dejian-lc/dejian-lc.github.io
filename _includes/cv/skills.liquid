{% comment %}
  Unified skills entry renderer for both formats
{% endcomment %}

<div class="card-text font-weight-light">
  {% for entry in entries %}
    <div class="skill-item">
      {% if entry.icon %}
        <i class="{{ entry.icon }}"></i>
      {% endif %}
      {% capture skill_name %}
        {% if entry.name %}{{ entry.name }}{% elsif entry.label %}{{ entry.label }}{% endif %}
      {% endcapture %}
      {% capture skill_details %}
        {% if entry.details %}{{ entry.details }}{% endif %}
      {% endcapture %}
      <strong>
        {{- skill_name -}}
        {%- if entry.level %} ({{ entry.level }}){% endif %}:</strong
      >
      {% if entry.keywords %}
        {% for keyword in entry.keywords %}
          {% if forloop.last %}
            {{ keyword }}
          {% else %}
            {{ keyword }},
          {% endif %}
        {% endfor %}
      {% elsif skill_details != '' %}
        {{ skill_details }}
      {% endif %}
    </div>
  {% endfor %}
</div>

<style>
  .skill-item {
    padding: 0.5rem 0;
  }
</style>
