{% comment %}
  Unified interests entry renderer for both formats
{% endcomment %}

<div class="card-text font-weight-light">
  {% for entry in entries %}
    <div class="interest-item">
      {% if entry.icon %}
        <i class="{{ entry.icon }}"></i>
      {% endif %}
      {% capture interest_name %}
        {% if entry.name %}{{ entry.name }}{% elsif entry.label %}{{ entry.label }}{% endif %}
      {% endcapture %}
      {% capture interest_details %}
        {% if entry.details %}{{ entry.details }}{% endif %}
      {% endcapture %}
      <strong>{{ interest_name }}:</strong>
      {% if entry.keywords %}
        {% for keyword in entry.keywords %}
          {% if forloop.last %}
            {{ keyword }}
          {% else %}
            {{ keyword }},
          {% endif %}
        {% endfor %}
      {% elsif interest_details != '' %}
        {{ interest_details }}
      {% endif %}
    </div>
  {% endfor %}
</div>

<style>
  .interest-item {
    padding: 0.5rem 0;
  }
</style>
